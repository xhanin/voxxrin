<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>RestRouter</servlet-name>
        <servlet-class>voxxr.web.RestRouter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SitemapServlet</servlet-name>
        <servlet-class>voxxr.web.SitemapServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>S4AServlet</servlet-name>
        <servlet-class>com.seo4ajax.S4AServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RestRouter</servlet-name>
        <url-pattern>/r/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RestRouter</servlet-name>
        <url-pattern>/t/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SitemapServlet</servlet-name>
        <url-pattern>/sitemap.xml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>S4AServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>m.html</welcome-file>
    </welcome-file-list>
</web-app>
